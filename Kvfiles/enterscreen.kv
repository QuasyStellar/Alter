<ENTERScreen>:
    Image:
        source: 'Assets/firstscreen/bg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .35, .22
        halign: 'center'
        pos_hint: {'center_x': .75, 'center_y': .6}
        font_size: dp(25)
        on_release: root.oms()
        Image:
            source: 'Assets/firstscreen/oms.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDTextButton:
        size_hint: .35, .22
        halign: 'center'
        pos_hint: {'center_x': .75, 'center_y': .37}
        on_release: root.mos()
        Image:
            source: 'Assets/firstscreen/mos.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDTextButton:
        size_hint: .1, .1
        halign: 'center'
        pos_hint: {'center_x': .91, 'center_y': .08}
        font_size: dp(25)
        on_release: root.show_alert_dialog_info()
        Image:
            source: 'Assets/firstscreen/question.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDLabel:
        id: time
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        pos_hint: {'center_x': .62, 'center_y': .82}
        font_size: dp(80)
        font_name: 'Assets/roboto'
        halign: 'center'
    MDLabel:
        id: days
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        pos_hint: {'center_x': .79, 'center_y': .82}
        font_size: dp(80)
        font_name: 'Assets/roboto'
        halign: 'center'
    MDLabel:
        id: months
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        pos_hint: {'center_x': .87, 'center_y': .82}
        font_size: dp(80)
        font_name: 'Assets/roboto'
        halign: 'center'
    MDLabel:
        id: week
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        pos_hint: {'center_x': .72, 'center_y': .82}
        font_size: dp(80)
        font_name: 'Assets/roboto'
        halign: 'center'