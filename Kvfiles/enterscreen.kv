#: import FadeTransition kivy.uix.screenmanager.FadeTransition
<ENTERScreen>:
    Image:
        source: 'Assets/firstscreen/bg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .25, .25
        pos_hint: {'center_x': .5, 'center_y': .5}
        on_release: root.oms()
        Image:
            source: 'Assets/firstscreen/oms.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDTextButton:
        on_release: root.mos()
        size_hint: .25, .25
        pos_hint: {'center_x': .3, 'center_y': .5}
        Image:
            source: 'Assets/firstscreen/mos.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDTextButton:
        on_release:
            root.manager.current = 'emiasscreen'
            root.manager.transition = FadeTransition(duration=.1)
        size_hint: .25, .25
        pos_hint: {'center_x': .7, 'center_y': .49}
        Image:
            source: 'Assets/firstscreen/emias.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDTextButton:
        size_hint: .1, .1
        halign: 'center'
        pos_hint: {'center_x': .62, 'center_y': .12}
        font_size: dp(25)
        on_release:
            root.manager.transition = FadeTransition(duration=.1)
            root.show_alert_dialog_info()
        Image:
            source: 'Assets/firstscreen/question.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDLabel:
        id: time
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        pos_hint: {'center_x': .08, 'center_y': .93}
        font_size: dp(100)
        font_name: 'Assets/roboto'
        halign: 'center'
    MDLabel:
        id: week
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        pos_hint: {'center_x': .08, 'center_y': .87}
        font_size: dp(50)
        font_name: 'Assets/roboto'
        halign: 'center'

<AFK>:
    name: 'afk'
    Image:
        source: 'Assets/firstscreen/startbg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .38, .25
        halign: 'center'
        pos_hint: {'center_x': .68, 'center_y': .3}
        font_size: dp(25)
        on_release:
            root.manager.transition = FadeTransition(duration=.1)
            root.manager.current = 'enter'
            root.manager.get_screen('enter').on_touch_down()
        Image:
            source: 'Assets/firstscreen/continuebut.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
<Alert>:
    name: 'alert'
    Image:
        source: 'Assets/firstscreen/alert.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .38, .25
        halign: 'center'
        pos_hint: {'center_x': .5, 'center_y': .12}
        font_size: dp(25)
        on_release:
            root.manager.transition = FadeTransition(duration=.1)
            root.manager.current = 'enter'
            root.manager.get_screen('enter').on_touch_down()
        Image:
            source: 'Assets/firstscreen/pon.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDLabel:
        id: time
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        pos_hint: {'center_x': .08, 'center_y': .93}
        font_size: dp(100)
        font_name: 'Assets/roboto'
        halign: 'center'
    MDLabel:
        id: week
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        pos_hint: {'center_x': .08, 'center_y': .87}
        font_size: dp(50)
        font_name: 'Assets/roboto'
        halign: 'center'
