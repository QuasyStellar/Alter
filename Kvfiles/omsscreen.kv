<OMSScreen>:
    name: 'oms'
    md_bg_color: (114/255, 195/255, 172/255, 0.49)
    Image:
        source: 'Assets/omsscreen/omsbg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .38, .25
        halign: 'center'
        pos_hint: {'center_x': .5, 'center_y': .12}
        font_size: dp(25)
        on_release:
            root.manager.transition = FadeTransition(duration=.1)
            root.manager.current = 'enter'
            root.manager.get_screen('enter').on_touch_down()
        Image:
            source: 'Assets/omsscreen/exitbut.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    RelativeLayout:
        id: omsrefresh
        MDTextField:
            id: policy
            text_color_focus: get_color_from_hex('#E2F9F2')
            text_color_normal: get_color_from_hex('#E2F9F2')
            mode: "fill"
            helper_text_color_normal: (114/255, 195/255, 172/255, .49)
            fill_color_focus:  get_color_from_hex("#32494B")
            size_hint: .332, .08
            on_touch_down: root.validation()
            on_text_validate: root.validation()
            active_line: False
            fill_color_normal: 53/255,73/255,75/255,0
            line_color_focus: (0/255, 228/255, 182/255, 0)
            multiline: False
            on_text:
                root.cou()
                root.validation()
            font_size: 50
            radius: [15]
            line_color_normal: (114/255, 195/255, 172/255, 0)
            pos_hint: {'center_x': .601, 'center_y': .63}
            input_filter: 'int'

        MDLabel:
            id: counts
            text: "0/16"
            halign: "center"
            pos_hint: {'center_x': .75, 'center_y': .56}
            theme_text_color: "Custom"
            text_color: "white"
            font_size: 30
        MDTextButton:
            size_hint: .35, .1
            halign: 'center'
            pos_hint: {'center_x': .6, 'center_y': .35}
            font_size: dp(25)
            on_release:
                root.omslogin()
            Image:
                source: 'Assets/omsscreen/enter.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size: self.parent.size
        MDCard:
            md_bg_color: 0,0,0,0
            size_hint: .09, .087
            pos_hint: {'center_x': .484, 'center_y': .48}
            ScrollView:
                bar_color: 0,0,0,0
                bar_inactive_color: 0,0,0,0
                BoxLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    orientation: 'vertical'
                    id: container1
        MDCard:
            md_bg_color: 0,0,0,0
            size_hint: .09, .087
            pos_hint: {'center_x': .6, 'center_y': .48}
            ScrollView:
                bar_color: 0,0,0,0
                bar_inactive_color: 0,0,0,0
                BoxLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    orientation: 'vertical'
                    id: container2
        MDCard:
            md_bg_color: 0,0,0,0
            size_hint: .09, .087
            pos_hint: {'center_x': .715, 'center_y': .48}
            ScrollView:
                bar_color: 0,0,0,0
                bar_inactive_color: 0,0,0,0
                BoxLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    orientation: 'vertical'
                    id: container3
                
                