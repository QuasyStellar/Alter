<OMSScreen>:
    name: 'oms'
    md_bg_color: (114/255, 195/255, 172/255, 0.49)
    Image:
        source: 'Assets/omsscreen/omsbg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .38, .25
        halign: 'center'
        pos_hint: {'center_x': .5, 'center_y': .12}
        font_size: dp(25)
        on_release:
            root.back()
        Image:
            source: 'Assets/omsscreen/exitbut.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    RelativeLayout:
        id: omsrefresh
        MDTextField:
            id: policy
            text_color_focus: get_color_from_hex('#72C3AC')
            text_color_normal: get_color_from_hex('#72C3AC')
            mode: "fill"
            fill_color_focus:  get_color_from_hex("#32494B")
            size_hint: .33, .075
            active_line: False
            fill_color_normal: get_color_from_hex("#32494B")
            line_color_focus: (0/255, 228/255, 182/255, 0)
            multiline: False
            on_text:
                root.cou()
            font_size: self.height/2
            radius: [15]
            line_color_normal: (114/255, 195/255, 172/255, 0)
            pos_hint: {'center_x': .595, 'center_y': .603}
            input_filter: 'int'

        MDLabel:
            id: counts
            text: "0/16"
            halign: "center"
            pos_hint: {'center_x': .75, 'center_y': .54}
            theme_text_color: "Custom"
            text_color: get_color_from_hex("#72C3AC")
            font_size: 30
        MDTextButton:
            size_hint: .35, .1
            halign: 'center'
            pos_hint: {'center_x': .6, 'center_y': .335}
            font_size: dp(25)
            on_release:
                root.omslogin()
            Image:
                source: 'Assets/omsscreen/enter.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size: self.parent.size
        MDCard:
            md_bg_color: 0,0,0,0
            size_hint: .095, .0757
            pos_hint: {'center_x': .481, 'center_y': .456}
            ScrollView:
                bar_color: 0,0,0,0
                bar_inactive_color: 0,0,0,0
                BoxLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    orientation: 'vertical'
                    id: container1
        MDCard:
            md_bg_color: 0,0,0,0
            size_hint: .125, .0757
            pos_hint: {'center_x': .596, 'center_y': .455}
            ScrollView:
                bar_color: 0,0,0,0
                bar_inactive_color: 0,0,0,0
                BoxLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    orientation: 'vertical'
                    id: container2
        MDCard:
            md_bg_color: 0,0,0,0
            size_hint: .095, .0757
            pos_hint: {'center_x': .712, 'center_y': .455}
            ScrollView:
                bar_color: 0,0,0,0
                bar_inactive_color: 0,0,0,0
                BoxLayout:
                    height: self.minimum_height
                    size_hint_y: None
                    orientation: 'vertical'
                    id: container3
        MDLabel:
            id: time
            bold: True
            theme_text_color: 'Custom'
            text_color: 'white'
            markup: True
            pos_hint: {'center_x': .08, 'center_y': .93}
            font_size: dp(100)
            font_name: 'Assets/roboto'
            halign: 'center'
        MDLabel:
            id: week
            bold: True
            theme_text_color: 'Custom'
            text_color: 'white'
            markup: True
            pos_hint: {'center_x': .08, 'center_y': .87}
            font_size: dp(50)
            font_name: 'Assets/roboto'
            halign: 'center'
                
                