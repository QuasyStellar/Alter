<MOSScreen>:
    name: 'mos'
    Image:
        source: 'Assets/mosscreen/mosbg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .28, .13
        halign: 'center'
        pos_hint: {'center_x': .6, 'center_y': .12}
        on_release:
            root.manager.transition.direction = "down"
            root.manager.current = "help"
            root.check(flag=True)
        Image:
            source: 'Assets/mosscreen/helpbut.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            keep_ratio: False
            size: self.parent.size
    MDTextButton:
        size_hint: .18, .13
        halign: 'center'
        pos_hint: {'center_x': .36, 'center_y': .12}
        on_release:
            root.manager.transition.direction = "down"
            root.manager.current = "enter"
            root.check(flag=True)
        Image:
            source: 'Assets/mosscreen/exitbut.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            keep_ratio: False
            size: self.parent.size
    MDLabel:
        id: time
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        font_name: 'Assets/fonts/roboto.ttf'
        markup: True
        pos_hint: {'center_x': .08, 'center_y': .93}
        font_size: dp(80)
        halign: 'center'
    MDLabel:
        id: week
        bold: True
        theme_text_color: 'Custom'
        text_color: 'white'
        markup: True
        font_name: 'Assets/fonts/roboto.ttf'
        pos_hint: {'center_x': .081, 'center_y': .87}
        font_size: dp(38)
        halign: 'center'
<HelpScreen>
    name: 'help'
    Image:
        source: 'Assets/mosscreen/helpbg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .4, .25
        halign: 'center'
        pos_hint: {'center_x': .5, 'center_y': .12}
        on_release:
            root.manager.get_screen('enter').mos()
        Image:
            source: 'Assets/omsscreen/exitbut.png'
            center_x: self.parent.center_x
