<MOSScreen>:
    name: 'mos'
    Image:
        source: 'Assets/mosscreen/mosbg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .28, .25
        halign: 'center'
        pos_hint: {'center_x': .6, 'center_y': .12}
        font_size: dp(25)
        on_release:
            root.manager.transition.direction = "down"
            root.manager.current = "enter"
            root.check(flag=True)
        Image:
            source: 'Assets/mosscreen/helpbut.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    MDTextButton:
        size_hint: .18, .25
        halign: 'center'
        pos_hint: {'center_x': .36, 'center_y': .12}
        font_size: dp(25)
        on_release:
            root.manager.transition.direction = "down"
            root.manager.current = "enter"
            root.check(flag=True)
        Image:
            source: 'Assets/mosscreen/exitbut.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size