<Loading>:
    name: "load"
    Image:
        source: 'Assets/loadingscreen/loadbg.png'
        allow_stretch: True
        keep_ratio: False
    MDSpinner:
        size_hint: None, None
        size: dp(100), dp(100)
        line_width: 6
        color: get_color_from_hex('#E2F9F2')
        pos_hint: {'center_x': .5, 'center_y': .5}
        active: True 

<Zapisi>:
    name: 'zapisi'
    Image:
        id: backgr
        source: 'Assets/omsloged/myzapisi.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .2, .15
        halign: 'center'
        pos_hint: {'center_x': .89, 'center_y': .08}
        font_size: dp(25)
        on_release:
            root.manager.get_screen('loged').screenback()
            root.ids.scrollid.clear_widgets()
        Image:
            source: 'Assets/exitbutton.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    ScrollView:
        size_hint: .5, .6
        md_bg_color: 1,1,1,1
        pos_hint: {'center_x': .5, 'center_y': .43}
        GridLayout:
            scroll_distance: 30
            cols:1
            spacing: 10
            size_hint_y: None
            height: self.minimum_height
            id: scrollid
