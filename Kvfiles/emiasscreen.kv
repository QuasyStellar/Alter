<EmiasScreen>:
	name: 'emiasscreen'
	Image:
        source: 'Assets/emiasscreen/emiasbg.png'
        allow_stretch: True
        keep_ratio: False
    MDTextButton:
        size_hint: .38, .25
        halign: 'center'
        pos_hint: {'center_x': .5, 'center_y': .12}
        font_size: dp(25)
        on_release:
            root.ids.login.text = ''
            root.ids.password.text = ''
            root.manager.current = 'enter'
        Image:
            source: 'Assets/omsscreen/exitbut.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y
            allow_stretch: True
            size: self.parent.size
    RelativeLayout:
        id: omsrefresh
        MDTextField:
            id: login
            text_color_focus: get_color_from_hex('#72C3AC')
            text_color_normal: get_color_from_hex('#72C3AC')
            mode: "fill"
            fill_color_focus:  get_color_from_hex("#32494B")
            size_hint: .33, .075
            active_line: False
            fill_color_normal: get_color_from_hex("#32494B")
            line_color_focus: (0/255, 228/255, 182/255, 0)
            multiline: False
            font_size: self.height/2
            radius: [15]
            line_color_normal: (114/255, 195/255, 172/255, 0)
            pos_hint: {'center_x': .595, 'center_y': .603}
            input_filter: 'int'
        MDTextField:
            id: password
            text_color_focus: get_color_from_hex('#72C3AC')
            text_color_normal: get_color_from_hex('#72C3AC')
            mode: "fill"
            fill_color_focus:  get_color_from_hex("#32494B")
            size_hint: .33, .075
            active_line: False
            fill_color_normal: get_color_from_hex("#32494B")
            line_color_focus: (0/255, 228/255, 182/255, 0)
            multiline: False
            font_size: self.height/2
            radius: [15]
            line_color_normal: (114/255, 195/255, 172/255, 0)
            pos_hint: {'center_x': .595, 'center_y': .455}
            input_filter: 'int'

        MDTextButton:
            size_hint: .35, .1
            halign: 'center'
            pos_hint: {'center_x': .6, 'center_y': .335}
            font_size: dp(25)
            on_release:
                root.ids.login.text = ''
                root.ids.password.text = ''
                root.manager.current = 'enter'
            Image:
                source: 'Assets/omsscreen/enter.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
                size: self.parent.size
        MDLabel:
            id: time
            bold: True
            theme_text_color: 'Custom'
            text_color: 'white'
            markup: True
            pos_hint: {'center_x': .08, 'center_y': .93}
            font_size: dp(100)
            halign: 'center'
        MDLabel:
            id: week
            bold: True
            theme_text_color: 'Custom'
            text_color: 'white'
            markup: True
            pos_hint: {'center_x': .08, 'center_y': .87}
            font_size: dp(50)
            halign: 'center'